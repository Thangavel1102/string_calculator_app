<div class="container mt-5">
  <h1 class="mb-4">String Calculator</h1>

  <% if flash[:success] %>
    <div class="alert alert-success"><%= "Input: #{params[:input]} #{flash[:success]}" %></div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>

  <%= form_with url: calculator_calculate_path, method: :post, local: true do %>
    <div class="form-group mb-3">
      <%= label_tag :numbers, "Enter numbers:" %>
      <%= text_area_tag :numbers, nil, class: "form-control", rows: 4 %>
    </div>

    <%= submit_tag "Calculate", class: "btn btn-primary" %>
  <% end %>
</div>
